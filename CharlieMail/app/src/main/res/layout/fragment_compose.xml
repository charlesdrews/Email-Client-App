<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/compose_to"
            android:hint="To - user@service.com;"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/compose_cc"
            android:hint="CC - user@service.com;"
            android:layout_below="@id/compose_to"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/compose_subject"
            android:hint="Subject"
            android:textStyle="bold"
            android:layout_below="@id/compose_cc"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/compose_body"
            android:hint="Message"
            android:layout_below="@id/compose_subject"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/send_button"
            android:text="Send"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimary"
            android:gravity="left|center_vertical"
            android:layout_below="@id/compose_body"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/draft_button"
            android:text="Save As Draft"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorPrimary"
            android:gravity="left|center_vertical"
            android:layout_below="@id/send_button"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>
